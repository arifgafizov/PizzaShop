<h2>Your cart</h2>

<div class="row">
	<div class="col-md-12"><h3>list orders</h3></div>
</div>

<table class="table table-striped">
	<thead>
		<td>name</td>
		<td>price</td>
		<td>quantity</td>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item[0].title %></td>
			<td><%= item[0].price %></td>
			<td><%= item[1] %></td>
		</tr>
		<% end %>
	</tbody>
</table>
